          <a class="nav_bar_item" href="/">Sækja um</a>
        </nav>
        <nav class="nav_bar_right">
          <p class="nav_bar_item"><%= locals.userName %></p>
          <% if(locals.user) { %>
            <a class="nav_bar_item" href="/logout">
              Útskrá
            <% } else { %>
              <a class="nav_bar_item" href="/login">
                Innskrá
           <% } %>
          </a>
        </nav>
      </nav>
    </header>
    <main></main>
